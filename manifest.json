{
   "manifest_version": 2,
   "name": "Tweetbot This",
   "description": "Tweet Title + URL on Tweetbot for Mac - Created with http://blog.self.li",
   "homepage_url": "http://5typos.net/",
   "version": "0.2.1",

   "background": {
      "scripts": [ "background.js" ]
   },
   "browser_action": {
      "default_icon": "icon-128.png",
      "default_title": "Tweetbot This"
   },
   "icons": {
      "128": "icon-128.png",
      "16": "icon-16.png",
      "48": "icon-48.png"
   },
   "permissions": [ "tabs", "*://*/*" ]
}
